@model IEnumerable<Grestau.Data.Model.Restaurant>

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>Bienvenue sur Grestau, la meilleur platform pour les restau de grenoble</p>
<h3>Top 5 restau a grenoble ! </h3>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            Date Last Visite
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating.Stars)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @{
                    var fullAdress = item.Adress.Numero + " " + item.Adress.Rue + " " + item.Adress.CodePostal + " " + item.Adress.Ville;
                    @Html.DisplayFor(m => fullAdress)
                }
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Rating.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating.Stars)
            </td>
        </tr>
    }
    </tbody>
</table>