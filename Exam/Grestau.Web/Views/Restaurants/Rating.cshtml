<div class="row">
    <div class="col-md-4">
        <form asp-action="Rating">
            <input type="hidden" asp-for="ID"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rating.ID"/>
            <div class="form-group">
                <label asp-for="Rating.Date" class="control-label">Date Last Visite</label>
                <input type="date" asp-for="Rating.Date" class="form-control"/>
                <span asp-validation-for="Rating.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Stars" class="control-label"></label>
                <input asp-for="Rating.Stars" class="form-control"/>
                <span asp-validation-for="Rating.Stars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Comment" class="control-label"></label>
                <textarea rows="10" cols="100" asp-for="Rating.Comment" class="form-control"></textarea>
                <span asp-validation-for="Rating.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

