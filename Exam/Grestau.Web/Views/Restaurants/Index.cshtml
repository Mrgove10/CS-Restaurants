@model IEnumerable<Grestau.Data.Model.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurant</h1>

<p>
    <a asp-action="Create">Create New</a> | <a asp-action="Ratings">Edit Ratings</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            Date Last Visite
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating.Stars)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @{
                    var fullAdress = item.Adress.Numero + " " + item.Adress.Rue + " " + item.Adress.CodePostal + " " + item.Adress.Ville;
                    @Html.DisplayFor(m => fullAdress)
                    ;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating.Stars)
            </td>
            <td>
              <!-- <a asp-action="Rating" asp-route-id="@item.ID">Edit Rating</a> -->
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>